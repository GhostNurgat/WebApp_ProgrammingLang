@{
    ViewData["Title"] = "Мой профиль";
}
@model WebApp_ProgrammingLang.Models.User

<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-12 col-md-2 justify-content-md-center">
            <div class="mb-2 text-md-center">
                @if (Model.UserImage == null)
                {
                    <img src="~/images/avatars/account_avatar.png" class="rounded-circle" style="width: 100px; height: 100px;">
                }
                else
                {
                    <img src="~/images/avatars/users/@Model.UserImage" class="rounded-circle" style="width: 100px; height: 100px">
                }
                <h5 class="h1" style="font-family: 'Comfortaa', cursive;">@Model.UserName</h5>
            </div>
            <div class="mb-2 text-md-center">
                <nav class="nav flex-column">
                    <a class="btn btn-outline-primary" style="margin: 10px;" asp-area="" asp-controller="User" asp-action="Profile" asp-route-userName="@User.Identity.Name">Информация</a>
                    @if (Model.UserName == User.Identity.Name)
                    {
                        <a class="btn btn-outline-primary" style="margin: 10px;" asp-area="" asp-controller="User" asp-action="Update" asp-route-id="@Model.Id">Редактировать</a>
                    }
                    <a class="btn btn-outline-primary" style="margin: 10px;" href="#">Задании</a>
                    @if (Model.UserName == User.Identity.Name)
                    {
                        <a class="btn btn-outline-danger" style="margin: 10px;" asp-area="" asp-controller="Account" asp-action="Logout">Выход</a>
                    }
                </nav>
            </div>
        </div>
        <div class="row justify-content-md-center">
            <ul class="nav nav-tabs nav-fill">
                <li class="nav-item">
                    <a class="nav-link" id="infoLink" asp-area="" asp-controller="User" asp-action="Info" asp-route-id="@Model.Id">Основная</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="worksLink" asp-area="" asp-controller="User" asp-action="Works" asp-route-id="@Model.Id">Работы</a>
                </li>
            </ul>
        </div>
    </div>
</div>

<div class="container-md">
    <div class="row justify-content-md-center" style="margin-bottom: 2em;">
        <div class="col-12 col-lg-10">
            <main id="profile"></main>
        </div>
    </div>
</div>

@model IEnumerable<Work>

<div class="p-md-4 p-lg-2 p-3">
    <div class="container-md">
        <div class="row justify-content-md-center">
            @foreach (var w in Model)
            {
                    <div class="card border-primary border-4" style="margin-bottom: 2ch;">
                        <div class="card-header bg-primary">
                            <h5 class="h3 text-white" style="font-family: 'Comfortaa', cursive;">@w.Title</h5>
                        </div>
                        <div class="card-body" style="font-family: 'Eco 2', sans-serif;">
                            <h6 class="card-subtitle text-muted">Язык: @w.ProgrammingLanguage.Title   Дата: @w.PublishDate</h6>
                            <p class="card-text pb-3">@w.Description</p>
                            <a class="btn btn-primary" asp-area="" asp-controller="Works" asp-action="WorkDetail" asp-route-id="@w.ID">Посмотреть</a>
                        </div>
                        <div class="card-footer">
                            <p class="mb-3">
                                <img src="~/images/commentlinear_106230.png">@w.WorkLikes.Count(c => c.WorkID == w.ID)
                            </p>
                        </div>
                    </div>
            }
        </div>
    </div>
</div>
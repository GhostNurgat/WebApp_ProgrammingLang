@{
    ViewData["Title"] = "Регистрация";
}
@model WebApp_ProgrammingLang.ViewModels.RegisterViewModel

<body class="overflow-auto" style="background-color: #9F3ED5;">
    <div class="pt-xl-5 pt-lg-2 pt-1">
        <div class="container-md">
            <div class="row justify-content-md-center">
                <div class="card" style="width: 25em;">
                    <div class="card-body">
                        <form method="post" asp-controller="Account" asp-action="Register">
                            <div class="mb-3">
                                <label asp-for="UserName" class="form-label"></label>
                                <div class="input-group has-validation">
                                    <span class="input-group-text">&#64;</span>
                                    <input type="text" asp-for="UserName" class="form-control" placeholder="Имя пользователя" />
                                    <span class="invalid-feedback" asp-validation-for="UserName"></span>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label"></label>
                                <input type="email" asp-for="Email" class="form-control" placeholder="Email" />
                                <span class="invalid-feedback" asp-validation-for="Email"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label"></label>
                                <input type="password" asp-for="Password" class="form-control" />
                                <span class="invalid-feedback" asp-validation-for="Password"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="PasswordConfirm" class="form-label"></label>
                                <input type="password" asp-for="PasswordConfirm" class="form-control" />
                                <span class="invalid-feedback" asp-validation-for="PasswordConfirm"></span>
                            </div>
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <input type="submit" class="btn btn-primary" value="Регистрироваться" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
